%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for @video, html: { class: 'form-horizontal' } do |f|
          %ul.nav.nav-tabs
            %li= link_to 'Recent Payments', '/ui/admin_views_payments'
            %li.active= link_to 'Add a New Video', '#'
          %br
          %fieldset.col-sm-3
            = f.text_field :title
            = f.collection_select :category_id, @categories, :id, :name
            = f.text_area :description
            = f.text_field :large_cover_url, label: 'Large Cover'
            = f.text_field :small_cover_url, label: 'Small Cover'
          %fieldset.actions.form-group.col-sm-6.col-md-offset-3
            = f.submit 'Add Video'
