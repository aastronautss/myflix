%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    %ul.col-md-5.clearfix
      %li.small= link_to "Advanced Search", advanced_search_videos_path
      %li
        = form_tag(search_videos_path, method: 'get', class: 'navbar-form') do
          .form-group
            = text_field_tag(:q, nil, class: 'form-control')
            = submit_tag('Search', class: 'btn btn-default')
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Invite a friend', invite_path
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', logout_path
